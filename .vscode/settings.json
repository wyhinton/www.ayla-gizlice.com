{
  "workbench.colorCustomizations": {
    "panelStickyScroll.background": "#0b5ad8",
    "sideBarStickyScroll.background": "#005ff7"
  },
  
  // Linting and formatting settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
  },
  
  // Language-specific formatting
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  
  // Rust analyzer settings
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.check.command": "clippy",
  
  // ESLint settings
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "svelte"
  ],
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
    "search.exclude": {
    "**/public": true
  },
  "files.watcherExclude": {
    "**/node_modules": true
  },
  "favorites.resources": [
    {
      "filePath": "src\\routes\\+page.svelte",
      "group": "Default"
    },
    {
      "filePath": "src\\routes\\+layout.svelte",
      "group": "Default"
    },
    {
      "filePath": "src\\lib\\stores\\projectStore.ts",
      "group": "Default"
    },
    {
      "filePath": "src\\lib\\components\\ProjectItem.svelte",
      "group": "Default"
    },
    {
      "filePath": "src\\lib\\components\\ProjectCategory.svelte",
      "group": "Default"
    },
    {
      "filePath": "src\\lib\\components\\ProjectDescription.svelte",
      "group": "Default"
    }
  ],

}